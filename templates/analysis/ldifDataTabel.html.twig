{% extends 'base.html.twig' %}
{% block content %}
	<!--data table here-->
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col" class="text-capitalize">nazwa klienta</th>
				<th scope="col" class="text-capitalize">kraj</th>
