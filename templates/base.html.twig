<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body style="background:#fff;">
		<div class="container mt-5 pt-5">
			<div class="row">
				<div class="col-md-12">
					<h4 class="text-bold display-5 text-left text-capitalize fw-bolder">zadanie</h4>
				</div>
			</div>
		</div>
		<div class="container mt-3">
			<div class="row">
				<div class="col-sm-12 col-md-3">
					<div class="list-group">
						<a href="{{path('homePage')}}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'homePage'%}active{% endif %}">Plik Csv</a>
						<a href="{{path('json_data')}}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'json_data'%} active {% endif %}">Plik Json</a>
						<a href="{{path('ldif-file')}}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'ldif-file'%} active {% endif %}">Plik ldif</a>
						<a href="{{path('reports')}}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'reports'%} active {% endif %}">Raport</a>

					</div>
				</div>
				<div class="col-sm-12 col-md-9"> {% block content %}{% endblock %}
					</div>
				</div>
			</div>
			    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		</body>
	</html>
